<div class="row">
    <div class="col s2">
    </div>

    <div class="col s10 ">
        <div class="row ">
            <% for i in @product %>
                <form method="post" action="/home/cart">
                    <div class="col s3 ">
                        <div class="card hoverable ">
                            <div class="card-image waves-effect waves-block waves-light ">
                                <div class="activator">

                                    <img src="/images/<%= i.item_pic %>">
                                </div>
                            </div>
                            <div class="card-content ">
                                <p>
                                    <%= i.item_price %>
                                </p>
                                <span class="card-title activator grey-text text-darken-4 "><%= i.item_name %>e<i class="material-icons right ">more_vert</i></span>
                                <input type="submit" class="btn-floating btn-large waves-effect waves-light red" value=" <%=i .item_id %>" name="item">
                                <br>
                            </div>
                            <div class="card-reveal ">
                                <span class="card-title grey-text text-darken-4 "><%= i.item_name %><i class="material-icons right ">close</i></span>
                                <p>
                                    <%= i.item_description %>
                                </p>
                                <input type="number" class="validate" name="qty" placeholder="QTY">
                            </div>
                        </div>
                    </div>
                </form>
                <% end %>
        </div>
    </div>